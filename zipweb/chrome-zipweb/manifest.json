{
  "manifest_version": 2,

  "name": "drawer",
  "description": "download pages from a website",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon16.png",
	"default_title": "Drawer"
  },
  "background":{
	"scripts":["background.js","zip.js","deflate.js"]
  },
  "icons": {
		"16": "img/icon16.png",	
		"48": "img/icon48.png"
   },
   "permissions":["tabs","contextMenus","<all_urls>"],
   "content_scripts":[
		{
			"matches":["<all_urls>"],
			"js":["content.js"],
			"run_at": "document_start"
		}
		]
}